datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Profile {
  avatarUrl   String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model Album {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  published Boolean?
  title     String
  updatedAt DateTime @updatedAt
}

model Picture {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  title       String
  updatedAt   DateTime @updatedAt
  url         String
}

model Category {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  updatedAt DateTime @updatedAt
}