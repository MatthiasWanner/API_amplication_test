datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  albums     Album[]
  categories Category[]
  createdAt  DateTime   @default(now())
  firstName  String?
  id         String     @id @default(cuid())
  lastName   String?
  password   String
  pictures   Picture[]
  profiles   Profile[]
  roles      String[]
  updatedAt  DateTime   @updatedAt
  username   String     @unique
}

model Profile {
  avatarUrl   String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Album {
  categories Category[]
  createdAt  DateTime   @default(now())
  id         String     @id @default(cuid())
  pictures   Picture[]
  published  Boolean?
  title      String
  updatedAt  DateTime   @updatedAt
  user       User       @relation(fields: [userId], references: [id])
  userId     String
}

model Picture {
  albums      Album[]
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  title       String
  updatedAt   DateTime @updatedAt
  url         String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Category {
  albums    Album[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}